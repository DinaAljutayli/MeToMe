<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">





    <TextView
        android:id="@+id/tvSkip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="60dp"
        android:background="#ffff"
        android:text="@string/skip"
        android:textColor="#E1284854"
        android:textSize="18sp" />
    <ImageView
        android:id="@+id/ivSlide1"
        android:layout_width="391dp"
        android:layout_height="433dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="60dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/motivation3" />

    <TextView
        android:id="@+id/tvSlide1"
        android:layout_width="248dp"
        android:layout_height="127dp"
        android:layout_below="@id/ivSlide1"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="0dp"
        android:text="@string/believe_in_yourself_and_anything_is_possible"
        android:textAllCaps="true"
        android:textColor="#708A81"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        android:layout_marginStart="150dp" />
</RelativeLayout>